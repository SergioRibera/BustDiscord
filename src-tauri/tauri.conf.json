{
    "build": {
        "distDir": "../dev",
        "devPath": "http://localhost:3000",
        "withGlobalTauri": true
    },
    "tauri": {
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.tauri.dev",
            "icon": [
                "../icons/32x32.png",
                "../icons/128x128.png",
                "../icons/128x128@2x.png",
                "../icons/icon.icns",
                "../icons/icon.ico"
            ],
            "resources": [],
            "externalBin": [],
            "copyright": "",
            "category": "DeveloperTool"
        },
        "allowlist": {
            "all": true
        },
        "windows": [
            {
                "label": "main",
                "title": "Bust Discord",
                "width": 800,
                "height": 600,
                "visible": false,
                "transparent": true,
                "url": "http://canary.discord.com/app"
            },
            {
                "label": "splashscreen",
                "width": 300,
                "height": 300,
                "decorations": false,
                "resizable": false,
                "transparent": true,
                "url": "splashscreen.html"
            }
        ],
        "security": {
            "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self'  img-src: 'self'"
        },
        "updater": {
            "active": false
        }
    }
}
